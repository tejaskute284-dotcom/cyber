generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  scores    CyberScore[]
  tasks     Task[]
}

model CyberScore {
  id        String   @id @default(uuid())
  score     Int
  breakdown String   // JSON string or specific fields
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Task {
  id        String   @id @default(uuid())
  title     String
  category  String
  completed Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Resource {
  id          String   @id @default(uuid())
  title       String
  type        String // Article, Video, Course
  url         String?  // Link to resource
  content     String?  // Or content text
  duration    String
  level       String // Beginner, Intermediate, Advanced
  category    String
  createdAt   DateTime @default(now())
}
